{% extends 'base.html.twig' %}

{% block gestion_page %}Ventes
{% endblock %}
{% block page_courante %}
{% endblock %}

{% block contenu %}

<body class="g-sidenav-show  bg-gray-200">
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
      <div class="container">
      <div class="row">
          <div class="col-12">
            <div class="card my-4">
              <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                  <h6 class="text-white text-capitalize ps-3 align-middle text-center">Information de la vente</h6>
                  
                </div>
              </div>
                    <div class="table-responsive p-0">
                      <table class="table align-items-center mb-0">
                        <thead>
                          <tr>
                          </br>
                            <h4 class="align-middle text-center">Date Vente<p>{{vente.getDateVente()|date('d-m-Y')}}</p></h4>
                            <h4 class="align-middle text-center">Montant<p>{{vente.montant}}</p></h4>
                            <h4 class="align-middle text-center">Voiture<p>{{vente.voiture.marque}}</p></h4>
                            <h4 class="align-middle text-center">Client<p>{{vente.client.getNom()}} {{vente.client.getPrenom()}}</p></h4>
                            <div class="align-middle text-center">
                                <a href="/vente"><button class="btn btn-warning m-3">Retour</button></a>
                            </div>
                          </tr>
                        </thead>
                      </table>
                    </div> 
          </div>
</body>
{% endblock %}

